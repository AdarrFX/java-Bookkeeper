<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- DataProcessingServlet Configuration -->
    <servlet>
        <servlet-name>DataProcessingServlet</servlet-name>
        <servlet-class>com.bookkeeper.servlet.DataProcessingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataProcessingServlet</servlet-name>
        <url-pattern>/processData</url-pattern>
    </servlet-mapping>

    <!-- LoginServlet Configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bookkeeper.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- ReportServlet Configuration -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.bookkeeper.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/generateReport</url-pattern>
    </servlet-mapping>

</web-app>
